{{> head}}
<div class="container">
{{> navbar}}
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">{{title}} <small>It's free!</small></h3>
			 			</div>
			 			<div class="panel-body">

			    		<form action="/register" method="POST">

                {{#if errors}}
                  {{#each errors}}
                    <div class="alert alert-danger">
                        {{this.msg}}
                    </div>
                  {{/each}}
                {{/if}}

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			                <input type="text" name="username" class="form-control input-sm" placeholder="Username" required autofocus>
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
			    				<input type="email" name="email" class="form-control input-sm" placeholder="Email Address" required autofocus>
			    			</div>

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="password" name="password" class="form-control input-sm" placeholder="Password" required autofocus>
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="password" name="passwordMatch" class="form-control input-sm" placeholder="Confirm Password" required autofocus>
			    					</div>
			    				</div>
			    			</div>

			    			<input type="submit" value="Register" class="btn btn-info btn-block">

			    		</form>

			    	</div> <!--panel-body-->
	    		</div> <!--panel-default-->
    		</div> <!--col-xs.....-->
    	</div> <!--row centered-form-->
    </div>  <!--END OF CONTAINER-->

{{> footer}}
